{
    "integrations": {
        "collaboration_tool": {
            "credential": "empo-slack"
        },
        "git_provider": {
            "credential": "empo-github",
            "target": "master"
        }
    },
    "update_behavior": {
        "auto_start_updates": "no",
        "skip_manual_testing": "no",
        "source_branch": "master",
        "destination_branch": "updates/[task:id]",
        "handle_packages": "dev_and_prod",
        "create_tasks_for": "all_packages"
    },
    "events": {
        "new_updates_available": [
            {
                "sendmail": {
                    "emails": "[workspace:members|,|admins+users][member:email][/workspace:members]",
                    "subject": "New updates are available for [project:name]",
                    "message": "[snippet:workflow.event.new-updates-available]",
                    "cc": "",
                    "bcc": ""
                }
            },
            {
                "sendmessage": {
                    "title": "New updates available for \"[project:name]\"",
                    "message": "We've found the new updates for your project.\n\nThe packages:\n[task:packages|, ][package:name]: [package:current-version] → [package:new-version][/task:packages]",
                    "color": "#998877"
                }
            }
        ],
        "ready_to_test": [
            {
                "sendmail": {
                    "emails": "[workspace:members|,|admins+users][member:email][/workspace:members]",
                    "subject": "A task for [project:name] is ready for testing",
                    "message": "[snippet:workflow.event.ready-to-test]",
                    "cc": "",
                    "bcc": ""
                }
            }
        ],
        "test_passed": [
            {
                "accept_pull_request": {
                    "delete_source_branch": "yes"
                }
            }
        ],
        "test_failed": [
            {
                "decline_pull_request": {
                    "delete_source_branch": "no"
                }
            }
        ],
        "failed": [
            {
                "sendmail": {
                    "emails": "[workspace:members|,|admins+users][member:email][/workspace:members]",
                    "subject": "A task error occurred in [project:name]",
                    "message": "[snippet:workflow.event.failed]",
                    "cc": "",
                    "bcc": ""
                }
            },
            {
                "sendmessage": {
                    "title": "A task error occurred in \"[project:name]\"",
                    "message": "We've found a task error in your project.\n\nThe packages:\n[task:packages|, ][package:name]: [package:current-version] → [package:new-version][/task:packages]",
                    "color": "#998877"
                }
            }
        ]
    }
}